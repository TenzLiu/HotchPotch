<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.tenz.hotchpotch.widget.scrollview.GradationScrollView
        android:id="@+id/sv_scrollview_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_head"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:src="@mipmap/scrollview_toolbar_top"
                android:scaleType="centerCrop"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/scrollview_toolbar_center"
                android:scaleType="fitXY"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/scrollview_toolbar_bottom"
                android:scaleType="fitXY"/>

        </LinearLayout>

    </com.tenz.hotchpotch.widget.scrollview.GradationScrollView>

    <include layout="@layout/layout_toolbar"/>

</RelativeLayout>